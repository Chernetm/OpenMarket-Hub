<% layout('layouts/boilerplate') %>

<div class="container d-flex justify-content-center align-items-center mt-5">
    <div class="row">
        <div class="col-6 offset-md-1 col-xl-4 offset-xl-4 ">
            <div class="card shadow">
                <img src="https://images.unsplash.com/photo-1707343846292-56e4c6abf291?q=80&w=1770&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDF8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D" alt="" 
                 class="card-img-top img-fluid reduced-height">
                <div class="card-body">
                    <h5 class="card-title">Register</h5>
                    <form action="/register" method="POST" novalidate class="validate-form">
                    
                        <div class="mb-2">
                            <label for="username" class="form-label">Username</label>
                            <input type="text" class="form-control" id="username" name="username" autofocus required>
                            <div class="valid-feedback">
                                Looks good
                            </div>
                            <div id="username"  class="invalid-feedback">
                                please add username
                            </div>
                        </div>
                        
                        <div class="mb-2">
                            <label for="email" class="form-label">Email</label>
                            <input type="email" class="form-control" id="email" name="email" required>
                            <div class="valid-feedback">
                                Looks good
                            </div>
                            <div id="email"  class="invalid-feedback">
                                please add email
                            </div>
                        </div>
                        <div class="mb-2">
                            <label for="password" class="form-label">Password</label>
                            <input type="password" class="form-control" id="password" name="password" required>
                            <div class="valid-feedback">
                                Looks good
                            </div>
                            <div id="password"  class="invalid-feedback">
                                please add password
                            </div>
                        </div>
                        <button type="submit" class="btn btn-success btn-full-width">Login</button>
                    </form>
                    
                </div>
            </div>
        </div>
    </div>

</div>
