<% layout('layouts/boilerplate') %>
<div class="container d-flex justify-content-center align-items-center mt-5">
    <div class="row">
        <h1 class="text-center">Edit Campground</h1>
        <div class="col-12 offset-md-3 col-xl-6 offset-xl-3 ">
            <div class="card shadow">
                <img src="https://images.unsplash.com/photo-1707343846292-56e4c6abf291?q=80&w=1770&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDF8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D" alt="" 
                 class="card-img-top img-fluid reduced-height">
                <div class="card-body">
                    <form action="/campgrounds/<%=campgrounds._id %>?_method=PUT" method="POST" novalidate class="validate-form" enctype="multipart/form-data">
                        <div class="mb-3">
                            <label for="title" class="form-label">Title</label>
                            <input type="text" class="form-control" id="title" name="campground[title]" value="<%=campgrounds.title%>" required>
                            <div class="valid-feedback">Looks good</div>
                        </div>
                        <div class="mb-3">
                            <label for="location" class="form-label">Location</label>
                            <input type="text" class="form-control" id="location" name="campground[location]"value="<%=campgrounds.location%>"required>
                            <div class="valid-feedback">Looks good</div>
                        </div>
                        
                        <div class="input-group mb-3">
                            <label for="price" class="form-label"></label>
                            <span class="input-group-text" id="basic-addon1">$</span>
                            <input type="decimal" class="form-control" placeholder="1.98" name="campground[price]" value="<%=campgrounds.price %>" aria-label="price" aria-describedby="basic-addon1"required>
                            <div class="valid-feedback">
                                Looks good</div>
                          </div>
                        <div class="mb-3">
                            <label for="description" class="form-label" >Description</label>
                            <textarea type="text" class="form-control" id="title" name="campground[description]" required><%=campgrounds.description %></textarea>
                            <div class="valid-feedback">Looks good</div>
                        </div>
                        <div class="mb-3">
                            <label for="image">Upload Image(s)</label>
                            <div class=" form-file custom file ">
                              <input class="form-control" type="file" id="image" name="image" multiple>
                                <label for="image" class="custom-form-label" >
                                </label>
                            </div>
                        </div>
                        <div class="mb-3">
                            <% campgrounds.images.forEach(function(img,i){ %>
                                <img src="<%= img.thumbnail %>" class="img-thumbnail" alt="">
                                <div class="form-check-inline">
                                    <input type="checkbox" class="" id="image-<%= i %>" name="deleteImages[]" value="<%= img.filename %>">
            
                                </div>
                                <label for="image-<%= i %>" >Delete?</label>
                                <% }) %>
                        </div>
                        
                        <div class="mb-3">
                            <button type="submit" class="btn btn-success btn-full-width">Update Campground</button>
                            
                        </div>
                        <div class="mb-3">
                            <a href="/campgrounds/<%=campgrounds._id%>" class="btn btn-secondary">Cancel</a>

                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

</div>
































